doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Cabin|Source+Code+Pro')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
  div#content
    header.header
      block header
        div.logo
          h1
            a(href=locals.url)= locals.name
          p.description= locals.description
          img.me(src="http://i.imgur.com/uFcS5u1.jpg")

    div.content-block
      block content
        h2 Django pony disapproves of your jade template
    footer
      div.content-block
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
